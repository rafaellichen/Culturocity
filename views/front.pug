<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Culturocity</title>
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
        <link href="https://fonts.googleapis.com/css?family=Special+Elite" rel="stylesheet">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        style
            include ../views/r.css
            include ../views/front.css
    </head>
    <body>
        include navbar.pug
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
            </ol>
        <div class="carousel-inner">
            if Popular[0].IMG !=""
                <div class="item active">
                    img(src=Popular[0].IMG)
                    <div class="carousel-caption">
                        <h3>#{Popular[0].NAME}</h3>
                        <p>#{Popular[0].DESCRIP}</p>
                    </div>
                </div>
            else
                <div class="item active">
                    img(src="http://papers.co/wallpaper/papers.co-ax42-coding-dark-computer-bokeh-illustration-art-black-36-3840x2400-4k-wallpaper.jpg")
                    <div class="carousel-caption">
                        <h3>#{Popular[0].NAME}</h3>
                        <p>#{Popular[0].DESCRIP}</p>
                    </div>
                </div>
            if PopularResult
                for val in Popular.slice(1)
                    if val.IMG !=""
                        <div class="item">
                            img(src=val.IMG)
                            <div class="carousel-caption">
                                <h3>#{val.NAME}</h3>
                                <p>#{val.DESCRIP}</p>
                            </div>
                        </div>
                    else
                        <div class="item">
                            img(src="http://papers.co/wallpaper/papers.co-ax42-coding-dark-computer-bokeh-illustration-art-black-36-3840x2400-4k-wallpaper.jpg")
                            <div class="carousel-caption">
                                <h3>#{val.NAME}</h3>
                                <p>#{val.DESCRIP}</p>
                            </div>
                        </div>
        </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="container">
            <div class="flex-row row">
                if AllResult
                    for val in AllMuseums
                        include card.pug
            </div>
        </div>
        script
            include front.js
    </body>
</html>